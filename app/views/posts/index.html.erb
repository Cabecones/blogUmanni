<h1>Postagens</h1>

<table>
  <tr>
    <th>Título</th>
    <th>Conteúdo</th>
    <th colspan="3"></th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= link_to 'Ver mais', post, :class => "btn btn-primary" %></td>
      <td><%= link_to  'Editar', edit_post_path(post), :class => "btn btn-primary" %></td>
      <td><%= button_to 'Apagar', post, method: :delete, data: { confirm: 'Tem certeza?' }, :class => "btn btn-danger" %></td>
    </tr>
  <% end %>
</table>

<br>

<%= link_to 'Nova Postagem', new_post_path %>
